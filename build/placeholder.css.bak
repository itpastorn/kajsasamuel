@font-face {
    font-family: "Edwardian Script ITC";
    src: url(ITCEDSCR.TTF);
}
html  {
    background: url(img/pappers-bg-2.png) #917c67;
}
body {
    border: 2px solid hsl(0, 50%, 20%);
    width: 90vw;
    max-width: 800px;
    padding: 2rem;
    background: url(img/papper-2-bg.png) hsla(29, 25%, 60%, 1);
    margin: 1em auto;
    font-family: sans-serif;
    border-radius: 1.5rem;
}
h1, h2 {
    font-family: "Edwardian Script ITC", sans-serif;
    font-weight: normal;
    margin: 1rem 0;
    text-align: center;
}
h1 {
    color: hsl(0, 50%, 15%);
    font-size: 6rem;
    padding: 1.3rem;
    background-image: url(img/vaven-doubled.jpg);
    background-size: contain;
    border-radius: 5px;
    text-shadow: 1px 1px 1px hsl(0,50%,80%);
}
h2 {
    color: hsl(0, 50%, 20%);
    font-size: 3rem;
    line-height: 1;
}
.below {
    font-size: 2.4rem;
    margin: 0.3rem;
}
p {
    padding: 0 0.5em;
    line-height: 1.3;
}
.nav-checkbox {
    display: none;
}
nav {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    border-top: 1px solid hsl(0, 50%, 20%);;
    border-bottom: 1px solid hsl(0, 50%, 20%);;
    margin: 1rem 0 2rem;
    padding: 0.3rem;
}
nav > ul {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    width: 100%;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
        -ms-flex-direction: row;
            flex-direction: row;
    -webkit-justify-content: space-around;
        -ms-flex-pack: distribute;
            justify-content: space-around;
    -webkit-flex-wrap: wrap;
        -ms-flex-wrap: wrap;
            flex-wrap: wrap;
    margin: 0;
    padding: 0;
}
nav > ul > li {
    list-style: none;
    margin: 0;
    padding: 0.1rem;
}
nav > ul > li > a {
    text-decoration: none;
    display: block;
    padding: 0 1rem;
}
nav > ul > li > a:link {
    color: hsl(330, 80%, 15%);
}
nav > ul > li > a:visited {
    color: hsl(330, 80%, 30%);
}
label,a {
    -webkit-transition: background-color 0.1s ease;
            transition: background-color 0.1s ease;
}
label:focus,
label:hover,
nav > ul > li > a:focus,
nav > ul > li > a:hover {
    text-decoration: underline;
    -webkit-text-decoration-style: dotted;
       -moz-text-decoration-style: dotted;
            text-decoration-style: dotted;
    background-color: rgba(255,255,255,0.2);
}
nav > ul > li > a:active {
}
nav > label {
    display: none;
    cursor: pointer;
}
figure {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
        -ms-flex-pack: center;
            justify-content: center;
    margin: 2rem 0 1rem;
}
.startimg {
    /* native 549 x 441 */
    width: 459px;
    border-radius: 5px;
}
p {
    font-size: medium;
    margin: 1rem;
    
}
tt {
    font-size: larger;
}
.centered {
    margin-left: auto;
    margin-right: auto;
    text-align: center;
}
.tip {
    font-size: smaller;
}
.cwrap {
    color: #444;
    margin: 2rem auto;;
    width: 449px;
    line-height: 1.7;
    border: 1px solid hsla(0, 50%, 15%,0.2);
    padding: 5px;
    border-radius: 5px;
    background-color: rgba(255,255,255,0.2)
}
.counter {
}
@media (max-width: 800px) {
    body {
        width: 90vw;
        padding: 1rem;
    }
    h1 {
        font-size: 5.4rem;
        padding: 1rem;
    }
    h2 {
        font-size: 2.7rem;
    }
    .below {
        font-size: 2.2rem;
    }
    .startimg {
        width: 70%;  /* 448*/
        /* height: 46vw; */ /* 368 */
    }
    .cwrap {
        width: calc(70% - 10px);
    }
}
@media (max-width: 700px) {
    .startimg {
         width: 85%;
    }
    .cwrap {
        width: calc(85% - 10px);
    }
}
@media (max-width: 600px) {
    h1 {
        font-size: 5rem;
        padding: 1rem;
    }
    h2 {
        font-size: 2.5rem;
    }
    .below {
        font-size: 2rem;
    }
    p, li {
        font-size: 90%;
    }
    p {
        width: 73.4vw;
        font-size: 0.8rem;
    }
}
/* Breakpoint for text */
@media (max-width: 565px) {
    h1 {
        font-size: 14vw;
        padding: 0.7rem;
        padding-left: .2rem;
    }
    h2 {
        font-size: 2.5rem;
    }
    .below {
        font-size: 2rem;
    }
    .startimg {
        width: 80%;
    }
    .cwrap {
        width: calc(80% - 10px);
    }
    .centered:not(.cwrap) {
         width: 80%;
     }
}
/* Collapse menu */
@media (max-width: 540px) {
    body {
        width: 88vw;
    }
    h2 {
        font-size: 2.3rem;
    }
    .below {
        font-size: 1.9rem;
    }
    nav > ul {
        max-height: 0;
        overflow: hidden;
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
        -webkit-flex-direction: column;
            -ms-flex-direction: column;
                flex-direction: column;
        -webkit-transition: max-height .25s linear;
                transition: max-height .25s linear;
    }
    #nav-checkbox + nav {
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-orient: vertical;
        -webkit-box-direction: reverse;
        -webkit-flex-direction: column-reverse;
            -ms-flex-direction: column-reverse;
                flex-direction: column-reverse;
    }
    #nav-checkbox:checked + nav > ul {
        max-height: 6.9em;
    }
    #nav-checkbox + nav > ul > li {
        visibility: hidden;
        -webkit-transition: visibility .25s linear;
                transition: visibility .25s linear;
        text-align: center;
        padding: 0.2em;
        width: 100%;
    }
    #nav-checkbox:checked + nav > ul > li {
        visibility: visible;
    }
    nav > label {
        display: block;
        text-align: right;
    }
}
